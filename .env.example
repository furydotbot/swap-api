# Solana RPC URL for blockchain connection
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# gRPC endpoint for transaction streaming
GRPC_ENDPOINT=https://api.mainnet-beta.solana.com

# gRPC authentication token
GRPC_TOKEN=your_grpc_token_here

# Helius WebSocket Configuration
HELIUS_API_KEY=your_helius_api_key_here

HELIUS_ENDPOINT=wss://atlas-mainnet.helius-rpc.com/websocket

# Streaming provider (grpc or helius)
STREAMING_PROVIDER=helius

# Commitment level for Helius (processed, confirmed, finalized)
COMMITMENT=processed

# Maximum memory usage in MB
MAX_MEMORY_MB=1000

# Memory cleanup threshold (0.0 to 1.0)
CLEANUP_THRESHOLD=0.85